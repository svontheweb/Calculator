<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvOutputTextDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="250"
        android:textSize="34dp"
        android:padding="5dp"
        android:gravity="right"
        android:layout_above="@+id/tvInputTextDisplay"
        />

    <TextView
        android:id="@+id/tvInputTextDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="250"
        android:textSize="70dp"
        android:padding="5dp"
        android:gravity="right"
        android:layout_above="@+id/llFunctionality"
        />

    <LinearLayout
        android:id="@+id/llFunctionality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="center"
            >
            
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_ac"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_start_bracket"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_end_bracket"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_divide"
                android:layout_marginStart="25dp"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_7"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_8"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_9"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_multiplication"
                android:layout_marginStart="25dp"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_4"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_5"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_6"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_minus"
                android:layout_marginStart="25dp"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_1"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_2"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_3"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_plus"
                android:layout_marginStart="25dp"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_0"
                android:layout_marginStart="25dp"
                android:visibility="invisible"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_0"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_dot"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_equal"
                android:layout_marginStart="25dp"
                />




        </LinearLayout>


    </LinearLayout>




</RelativeLayout>



